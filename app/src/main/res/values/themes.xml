<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SM_Application" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black  </item>
        <item name="colorAccent">@color/orange</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SM_Application.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SM_Application.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SM_Application.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>